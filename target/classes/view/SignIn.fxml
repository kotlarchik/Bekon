<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" stylesheets="@../style/styleSign.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kotlarchik.controllers.ControllerSignIn">
   <children>
      <Button fx:id="buttonSign" layoutX="160.0" layoutY="318.0" mnemonicParsing="false" onAction="#pressSign" text="Войти">
         <font>
            <Font name="Calibri Bold" size="20.0" />
         </font>
      </Button>
      <GridPane layoutX="56.0" layoutY="91.0" prefHeight="100.0" prefWidth="288.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="139.0" minWidth="10.0" prefWidth="86.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="202.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Логин:" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="20.0" />
               </font></Label>
            <Label text="Пароль:" textFill="WHITE" GridPane.rowIndex="1">
               <font>
                  <Font name="Calibri Bold" size="20.0" />
               </font></Label>
            <TextField fx:id="txtLogin" GridPane.columnIndex="1" />
            <PasswordField fx:id="txtPass" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label fx:id="txtStatus" layoutX="56.0" layoutY="206.0" prefHeight="100.0" prefWidth="301.0" styleClass="status" stylesheets="@../style/styleSign.css" text="      " textAlignment="CENTER" wrapText="true" />
   </children>
</AnchorPane>
